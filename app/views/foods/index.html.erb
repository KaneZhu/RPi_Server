<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>

<table>
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Name</th>
      <th>Energy</th>
      <th>Fat</th>
      <th>Saturates</th>
      <th>Sugars</th>
      <th>Salt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.barcode %></td>
        <td><%= food.name %></td>
        <td><%= food.energy %></td>
        <td><%= food.fat %></td>
        <td><%= food.saturates %></td>
        <td><%= food.sugars %></td>
        <td><%= food.salt %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

